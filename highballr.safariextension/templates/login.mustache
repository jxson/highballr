<form action="#" method="post" id="login-form">
  <p>
    <label for="login">
      Login:
    </label>

    <input type="text"
      name="login"
      value="{{ login }}"
      id="login" />
  </p>

  <p>
    <label for="password">
      Password:
    </label>

    <input type="password"
      name="password"
      value="{{ password }}"
      id="password" />
  </p>

  <p>
    <input type="submit" value="Login &rarr;" />
  </p>
</form>
